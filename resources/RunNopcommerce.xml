<?xml version="1.0" encoding="UTF-8"?>
<suite parallel="false" name="Nopcommerce">
	<listeners>
		<listener class-name="commons.MethodListener" />
		<!--  <listener class-name="reportConfig.ExtentTestListener"/>-->
		 <listener class-name="reportConfig.AllureTestListener"/>
		 <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
	</listeners>


	<test name="Run on Chrome" preserve-oder="true">
		<parameter name="browser" value="CHROME" />
		<classes>
			<class name="com.nopcommerce.common.Common_Register" />
			<class name="com.nopcommerce.user.Practice_01_MyAccount" />
		
		</classes>
	</test>

	<test name="Run on firefox" preserve-oder="true">
		<parameter name="browser" value="FIREFOX" />
		<classes>
			<class name="com.nopcommerce.common.Common_Register" />
			<class name="com.nopcommerce.user.Practice_01_MyAccount" />
		
		</classes>
	</test>
	
	<test name="Run on edge" preserve-oder="true">
		<parameter name="browser" value="EDGE" />
		<classes>
			<class name="com.nopcommerce.common.Common_Register" />
			<class name="com.nopcommerce.user.Practice_01_MyAccount" />
		
		</classes>
	</test>
</suite> 
